@model IEnumerable<ECommerceProject.Models.Inventory>

@{
    ViewBag.Title = "Index";
}

<h2>Inventário</h2>

<p>
    @Html.ActionLink("Novo Inventário", "Create",new { },new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WareHouseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WareHouseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.InventoryId },new {@class="btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.InventoryId }, new {@class="btn btn-info" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.InventoryId },new { @class="btn btn-danger" })
        </td>
    </tr>
}

</table>

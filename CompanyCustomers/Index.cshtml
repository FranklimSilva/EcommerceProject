@model IEnumerable<ECommerceProject.Models.CompanyCustomer>

@{
    ViewBag.Title = "Index";
}

<h2>Cliente da empresa</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Company.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CompanyCustomerId }, new { @class="btn btn-warning" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CompanyCustomerId }, new {@class="btn btn-info" }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.CompanyCustomerId }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
